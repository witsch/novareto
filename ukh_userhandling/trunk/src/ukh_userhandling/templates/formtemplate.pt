<div class="input-form prepend-1"
  metal:define-macro="editform"
  i18n:domain="zeam.form.base">
  <div id="formHeader">
    <h1 tal:condition="view/label"
      tal:content="view/label">Label</h1>
    <p class="big"
      tal:condition="view/description"
      tal:content="view/description">Description</p>
  </div>


  <form action="."
    method="post"
    class="edit-form"
    tal:attributes="action request/URL;
    id view/id|view/__name__"
    enctype="multipart/form-data">

    <fieldset>
      <legend tal:condition="view/legend" tal:content="view/legend"/>

      <p class="form-status"
        tal:condition="view/status"
        tal:content="view/status">Status</p>

      <div class="form-error"
        tal:condition="view/errors">
        <span i18n:translate="text_errors"> Es sind Fehler aufgetreten: </span>
      </div>

      <div class="fields"
        tal:condition="view/fieldWidgets">
        <div class="row"
          tal:attributes="class python: widget.error is not None and 'row error' or 'row';
          id string:form-${widget/htmlId}"
          tal:repeat="widget view/fieldWidgets">
          <label>
            <span class="label" for="#" i18n:domain="uvcsite"
              tal:attributes="for widget/htmlId"
              tal:content="widget/title">
              Label </span>
            <span class="field-required"
              tal:condition="widget/required">&nbsp;</span>
           </label>
            <tal:description tal:condition="widget/description">
              <span
                tal:content="structure widget/description">
              </span>
            </tal:description>
          <div class="widget">
            <tal:widget tal:content="structure widget/render" />
          </div>
          <div class="error-message"
            tal:define="error widget/error"
            tal:condition="error">
            <span tal:content="error/title"> Error </span>
          </div>
        </div>
      </div>

      <div class="actions"
        tal:condition="view/actionWidgets">
        <span class="action" tal:repeat="widget view/actionWidgets">
          <tal:widget tal:content="structure widget/render" />
        </span>
      </div>


    </fieldset>
  </form>
</div>


