<html>
  <body>
    <div metal:use-macro="macro:editform">
    </div>
    <table class="tablesorter myTable" tal:define="results view/results" tal:condition="results">
      <thead>
      <tr>
        <th> Benutzer </th>
        <th> Mitgliedsnummer </th>
        <th> Name </th>
        <th> Strasse </th>
        <th> Plz </th>
        <th> Ort </th>
      </tr>
      </thead>
      <tbody>
      <tr tal:repeat="result results"
          tal:attributes="class python: repeat['result'].odd() and 'odd' or 'even'">
        <td> <span tal:content="python: view.formatHU(result)">10000-02"</span> </td>
        <td tal:content="result/trgmnr" />
        <td>
          <a href="#" tal:attributes="href string:${view/application_url}/changeuser?oid=${result/trgrcd}&az=${result/az}">
             <span tal:content="result/iknam1" />
           </a>
         </td>
         <td tal:content="result/ikstr"/>
         <td tal:content="result/ikhplz"/>
         <td tal:content="result/ikhort"/>
       </tr>
       </tbody>
    </table>  
  </body>
</html>
