<html>
  <body>
    <div metal:use-macro="macro:editform">
    </div>
    <table class="tablesorter zebra-striped" tal:define="results view.results" tal:condition="results">
      <thead>
      <tr>
        <th> Benutzer </th>
        <th> Mitgliedsnummer </th>
        <th> Name </th>
        <th> Strasse </th>
        <th> Plz </th>
        <th> Ort </th>
      </tr>
      </thead>
      <tbody>
      <tr tal:repeat="result results"
          tal:attributes="class repeat['result'].odd() and 'odd' or 'even'">
        <td> <span tal:content="view.formatHU(result)">10000-02"</span> </td>
        <td tal:content="result['UKHINTERN_z1ext1ab_trgmnr']" />
        <td>
          <a href="#" tal:attributes="href view.application_url() +'/changeuser?oid=' + str(result['UKHINTERN_z1ext1ab_trgrcd']) + '&az=' + result['UKHINTERN_z1ext1ab_az']">
             <span tal:content="result['UKHINTERN_z1ext1ab_iknam1']" />
           </a>
         </td>
         <td tal:content="result['UKHINTERN_z1ext1ab_ikstr']"/>
         <td tal:content="result['UKHINTERN_z1ext1ab_ikhplz']"/>
         <td tal:content="result['UKHINTERN_z1ext1ab_ikhort']"/>
       </tr>
       </tbody>
    </table>  
  </body>
</html>
