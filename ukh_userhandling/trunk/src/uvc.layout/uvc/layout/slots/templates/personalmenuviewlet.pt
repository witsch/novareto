<div id="personalmenu">
  <ul tal:attributes="id viewlet/id">
    <li tal:repeat="menu viewlet/menus">
      <a href="" tal:attributes="href menu/action" tal:content="menu/title"/>
      <ul tal:condition="menu/submenu">
        <li tal:repeat="submenu menu/submenu">
          <a href="" tal:attributes="href submenu/action" tal:content="submenu/title"/>
        </li>
      </ul>
    </li>
  </ul>
</div>
<div class="clear"/>
