<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="nva.borrow">
<body>

<metal:main fill-slot="content-core">
  <metal:content-core define-macro="content-core">

    <img class="set-image"
          tal:condition="python: context.image is not None"
         tal:define="scales context/@@images"
         tal:replace="structure python: scales.scale('image', width=400, height=400).tag()" />    

    <div class="set-text" 
         tal:condition="context/text"
         tal:content="structure context/text/output" />

    <hr/>
    <div class="items-in-set">
        <div tal:repeat="item python: context.getFolderContents({'portal_type' : 'nva.borrow.borrowableitem'}, full_objects=True)">
            <h2>
                <a tal:attributes="href item/absolute_url"  tal:content="item/Title" />
            </h2>
            <div tal:content="item/Description" />
            <tal:if condition="python: item.image is not None">
                <img class="set-image"
                     tal:define="scales item/@@images"
                     tal:replace="structure python: scales.scale('image', width=400, height=400).tag()" />    
             </tal:if>
        </div>
    </div>
            
  </metal:content-core>
</metal:main>

</body>
</html>

