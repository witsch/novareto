<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="nva.borrow">
<body>

<metal:main fill-slot="content-core">
  <metal:content-core define-macro="content-core">

      <style type="text/css">
          .item-status-free {
            background-color: green;
          }
          .item-status-weekend {
            background-color: #ddd;
          }
          .item-status-blocked {
            background-color: red;
          }
    </style>

    <img class="item-image"
         tal:define="scales context/@@images"
         tal:replace="structure python: scales.scale('image', width=400, height=400).tag()" />    

    <div class="item-text" 
         tal:condition="context/text"
         tal:content="structure context/text/output" />

    <div class="item-max-items">
        <label>Available items</label>:
        <span tal:content="context/itemsAvailable" />
    </div>

    <div class="booking-dates">
        <label>Booking dates</label>:
        <ul>
            <li tal:repeat="booking context/getBookingDates">
                <span tal:content="booking/fromDate" /> -
                <span tal:content="booking/toDate" /> 
            </li>
        </ul>
    </div>

    <div class="booking-calendar" tal:define="result context/getBookingCalendar">
        <label>Booking calendar</label>:
        <div class="booking-month" tal:repeat="d result">
            <span tal:content="string:${d/month}/${d/year}" />            
            <table border="1">
                <tbody>
                    <tr>
                        <td style="background: #ddd; width: 25px;text-align: center" tal:repeat="item d/days">
                            <span tal:content="python: ['Mo', 'Di', 'Mi', 'Do', 'Fr', 'Sa', 'So'][item['weekday']]" />
                        </td>
                    </tr>
                    <tr>
                        <td style="width: 25px;text-align: center" tal:repeat="item d/days">
                            <span tal:content="item/day" />
                        </td>
                    </tr>
                    <tr>
                        <td tal:repeat="item d/days"
                            tal:attributes="class string:item-status-${item/status}">&nbsp;
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
    
  </metal:content-core>
</metal:main>

</body>
</html>

