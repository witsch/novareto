<tal:content define="items handler/getItems"
  i18n:domain="nva.plone.cart">
  <h1 i18n:translate="">Warenkorb</h1>
  <div tal:condition="not: items" i18n:translate="">
   
    The shopping cart is empty.
  </div>
  <div tal:condition="items">
    <fieldset>
      <input type="checkbox" id="cart-member"
	     tal:attributes="checked context/is_member"
	     /><span i18n:translate=""> Mitgliedsbetrieb der BG Verkehr
             </span>
           <span align="right"> 
            <strong i18n:translate=""> Gesamtbestellwert: EUR <span tal:replace="handler/getTotalPrice" /> </strong>
            <span i18n:translate=""> zzgl. MwST. und Versand </span> 
           </span>
            
    <table class="listing nosort">
      <thead>
	<tr>
	  <th i18n:translate="">Titel der Broschuere</th>
	  <th i18n:translate="">Artikelnummer</th>
	  <th i18n:translate="">Einzelpreis</th>
	  <th i18n:translate="">Anzahl</th>
	  <th i18n:translate="">Gesamtpreis</th>
	  <th colspan="3" i18n:translate="">Actions</th>
	</tr>
      </thead>
      <tbody>
	<tal:loop repeat="item items">
	  <tr tal:attributes="id string:item-${item/code}">
	    <td>
	      <a href="" tal:content="item/title"
		 tal:attributes="href item/url" />
	    </td>
	    <td tal:content="item/code" />
	    <td>
                <span tal:content="item/price" />
            </td>
	    <td> 
                <span class="quantity" tal:content="item/quantity" />
                  <a href=""
                     class="cart-action"
		     tal:condition="python: item.quantity < item.max_quantity"
                     tal:attributes="href string:${cart_url}/plus/${item/code}"
                     > <font size="2">+</font> </a>
                  <a href=""
                     class="cart-action"
		     tal:condition="item/quantity"
                     tal:attributes="href string:${cart_url}/minus/${item/code}"
                     ><font size="2">-</font></a>
            </td>    
	    <td tal:content="item/total_price" />
            <!--
	    <td>
	      <a href=""
		 class="cart-action"
		 tal:attributes="href string:${cart_url}/plus/${item/code}"
		 >+</a></td>
	    <td>
	      <a href=""
		 class="cart-action"
		 tal:attributes="href string:${cart_url}/minus/${item/code}"
		 >-</a>
	    </td>
            -->
	    <td>
	      <a href=""
		 class="cart-action"
		 tal:attributes="href string:${cart_url}/delete/${item/code}"> 
                 <span i18n:translate=""> aus dem Warenkorb entfernen </span>
                 </a>
	    </td>
	  </tr>
          <!--
	  <tr>
	    <td colspan="4" style="text-align: right;">Total</td>
	    <td tal:content="handler/getTotalPrice" />
	  </tr>
          -->
	</tal:loop>
      </tbody>
    </table>

    <a href="++cart++/checkout"><span i18n:translate="">bestellen </span></a>
    </fieldset>

  </div>
</tal:content>
