<tal:content define="items handler/getItems">
  <h1>Warenkorb</h1>
  <div tal:condition="not: items">
    The shopping cart is empty.
  </div>
  <div tal:condition="items">
    <fieldset>
      <input type="checkbox" id="cart-member"
	     tal:attributes="checked context/is_member"
	     /> Mitgliedsbetrieb der BG Verkehr 
           <span align="right"> 
            <strong> Gesamtbestellwert: EUR <span tal:replace="handler/getTotalPrice" /> </strong>
            zzgl. MwST. und Versand 
           </span>
            
    <table class="listing nosort">
      <thead>
	<tr>
	  <th>Titel der Brosch√ºre</th>
	  <th>Artikelnummer</th>
	  <th>Einzelpreis</th>
	  <th>Anzahl</th>
	  <th>Gesamtpreis</th>
	  <th colspan="3">Actions</th>
	</tr>
      </thead>
      <tbody>
	<tal:loop repeat="item items">
	  <tr tal:attributes="id string:item-${item/code}">
	    <td>
	      <a href="" tal:content="item/title"
		 tal:attributes="href item/url" />
	    </td>
	    <td tal:content="item/code" />
	    <td>
                <span tal:content="item/price" />
            </td>
	    <td> 
                <span class="quantity" tal:content="item/quantity" />
                  <a href=""
                     class="cart-action"
                     tal:attributes="href string:${cart_url}/plus/${item/code}"
                     >+</a>
                  <a href=""
                     class="cart-action"
                     tal:attributes="href string:${cart_url}/minus/${item/code}"
                     >-</a>
            </td>    
	    <td tal:content="item/total_price" />
            <!--
	    <td>
	      <a href=""
		 class="cart-action"
		 tal:attributes="href string:${cart_url}/plus/${item/code}"
		 >+</a></td>
	    <td>
	      <a href=""
		 class="cart-action"
		 tal:attributes="href string:${cart_url}/minus/${item/code}"
		 >-</a>
	    </td>
            -->
	    <td>
	      <a href=""
		 class="cart-action"
		 tal:attributes="href string:${cart_url}/delete/${item/code}"
		 >aus dem <br> Warenkorb <br> entfernen</a>
	    </td>
	  </tr>
          <!--
	  <tr>
	    <td colspan="4" style="text-align: right;">Total</td>
	    <td tal:content="handler/getTotalPrice" />
	  </tr>
          -->
	</tal:loop>
      </tbody>
    </table>

    <a href="++cart++/checkout">bestellen</a>
    </fieldset>

  </div>
</tal:content>
